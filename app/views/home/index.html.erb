<div class="container">
	<div class="row">
		<div class="col-md-6 ml-md-auto mr-md-auto">
			<h1>Welcome</h1>
			<%= flash[:notice] %>
			<%= flash[:alert] %>
		</div>
	</div>
	<% if current_user %>
		<div class="row">
			<div class="col-md-6 ml-md-auto mr-md-auto">
				<%= button_to "Logout", logout_path, method: :delete, class:'btn btn-primary' %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 ml-md-auto mr-md-auto">
				<%= current_user.name %>
			</div>
		</div>
	<% else %>
		<div class="row">
			<div class="col-md-6 ml-md-auto mr-md-auto">
				<%= button_to "Login via Twitter", '/auth/twitter' %>
			</div>
		</div>
	<% end %>
</div>